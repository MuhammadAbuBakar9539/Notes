<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NewNoteActivity">

    <EditText
        android:id="@+id/et_title_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/side_margin"
        android:background="@drawable/border_edit_text"
        android:hint="@string/title"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="@dimen/side_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <EditText
        android:id="@+id/et_note_detail_new"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/side_margin"
        android:background="@drawable/border_edit_text"
        android:gravity="start|top"
        android:hint="@string/note_description"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="@dimen/side_margin"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title_new" />

    <Button
        android:id="@+id/btn_save_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/side_margin"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_note_detail_new"
        app:layout_constraintStart_toStartOf="@+id/et_note_detail_new" />

</androidx.constraintlayout.widget.ConstraintLayout>